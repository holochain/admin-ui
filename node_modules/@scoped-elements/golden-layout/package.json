{
  "name": "@scoped-elements/golden-layout",
  "version": "0.0.2",
  "description": "Custom Elements that export the [golden-layout](https://github.com/golden-layout/golden-layout) library using the [scoped-elements mixin](https://www.npmjs.com/package/@open-wc/scoped-elements/v/1.0.3)",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "npm run build && concurrently -k -r \"npm run build:watch\" \"wds\"",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook",
    "publish-to-branch": "npm run build && gh-pages -d ./ -b build"
  },
  "dependencies": {
    "@lit-labs/context": "github:holochain-open-dev/context#build",
    "@open-wc/scoped-elements": "^2.0.0-next.4",
    "lit": "^2.0.0-rc.4"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.5",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@web/dev-server": "^0.1.21",
    "@web/dev-server-storybook": "^0.3.7",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "gh-pages": "^3.2.3",
    "golden-layout": "github:guillemcordoba/golden-layout#build",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss-url": "^10.1.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-postcss-lit": "^1.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "no-new": "off",
      "import/extensions": "off",
      "no-param-reassign": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
