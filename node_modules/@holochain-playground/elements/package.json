{
  "name": "@holochain-playground/elements",
  "version": "0.0.1",
  "description": "Holochain playground that simulates real life holochain behaviour",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "npm run build && concurrently -k \"npm:build-watch\" \"wds -c web-dev-server.config.mjs\"",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build-watch": "rollup -w -c rollup.config.js",
    "test": "karma start --coverage",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run tsc:watch\" \"karma start --auto-watch=true --single-run=false\"",
    "analyze": "wca analyze \"src/**/*.{js,ts}\" --features cssproperty member slot event --outFile custom-elements.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "publish-storybook": "gh-pages -d storybook-static",
    "publish-to-branch": "npm run build && gh-pages -d . -b build"
  },
  "dependencies": {
    "@holochain-open-dev/core-types": "0.1.1",
    "@holochain-playground/core": "github:holochain-playground/core#build",
    "@open-wc/scoped-elements": "^2.0.0-next.4",
    "@power-elements/json-viewer": "^2.1.1",
    "@scoped-elements/golden-layout": "0.0.2",
    "@scoped-elements/material-web": "^0.0.4",
    "@vaadin/vaadin-grid": "^5.7.12",
    "cytoscape": "^3.17.0",
    "cytoscape-cola": "^2.3.0",
    "cytoscape-dagre": "^2.2.2",
    "cytoscape-euler": "^1.2.2",
    "cytoscape-klay": "^3.1.3",
    "cytoscape-popper": "^1.0.7",
    "cytoscape-spread": "^3.0.0",
    "lit": "^2.0.0-rc.4",
    "lit-element-context": "^0.1.1",
    "lodash-es": "^4.17.21",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@open-wc/testing": "^2.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/web-components": "^6.1.20",
    "@types/lodash-es": "^4.17.3",
    "@web/dev-server": "^0.1.4",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "^0.9.7",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "gh-pages": "^3.1.0",
    "rimraf": "^2.7.1",
    "rollup": "^2.36.2",
    "typescript": "^3.9.7",
    "web-component-analyzer": "^1.1.6"
  }
}
