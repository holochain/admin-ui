{
  "name": "@lit-labs/context",
  "version": "1.0.0-pre.1",
  "description": "Helpers and controllers for using Context protocol",
  "license": "BSD-3-Clause",
  "homepage": "https://lit.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/context"
  },
  "type": "module",
  "main": "lit-context.js",
  "module": "lit-context.js",
  "typings": "lit-context.d.ts",
  "directories": {
    "test": "test"
  },
  "exports": {
    ".": {
      "development": "./development/lit-context.js",
      "default": "./lit-context.js"
    }
  },
  "files": [
    "/lib/",
    "/lit-context.d.ts",
    "/lit-context.js.map",
    "/src/",
    "!/src/test/",
    "/development/",
    "!/development/test/",
    "/context.{d.ts,d.ts.map,js,js.map}"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts --build && rollup -c",
    "build:watch": "rollup -c --watch",
    "build:ts": "tsc --build",
    "build:ts:watch": "tsc --build --watch",
    "clean": "rm -rf {context}.{js,js.map,d.ts} development/ test/ *.tsbuildinfo",
    "dev": "scripts/dev.sh",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "cd ../../tests && npx wtr '../labs/context/development/**/*_test.js'",
    "test:prod": "TEST_PROD_BUILD=true npm run test:dev",
    "test:watch": "npm run test:dev -- --watch",
    "checksize": "rollup -c --environment=CHECKSIZE",
    "regen-package-lock": "rm -rf node_modules package-lock.json; npm install",
    "publish-to-branch": "npm run build && gh-pages -d ./ -b build"
  },
  "author": "Google LLC",
  "dependencies": {
    "@lit/reactive-element": "^1.0.0-rc.1",
    "lit": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "@types/chai": "^4.0.1",
    "@types/mocha": "^8.0.3",
    "@types/trusted-types": "^1.0.1",
    "@web/test-runner-mocha": "^0.3.5",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "gh-pages": "^3.2.3",
    "mocha": "^8.1.3",
    "rollup": "^2.28.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
